<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:fresco="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.zhks.safetyproduction.viewmodel.HomeActivityViewModel" />

    </data>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </androidx.viewpager.widget.ViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewLineColor">

        </View>

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="60dp"
            android:gravity="center"
            app:tl_tab_space_equal="true"
            app:tl_indicator_corner_radius="2dp"
            app:tl_indicator_height="0dp"
            app:tl_textSelectColor="@color/main_color"
            app:tl_textSelsize="13sp"
            app:tl_textUnselectColor="@color/gray"
            app:tl_textsize="12sp" />
    </LinearLayout>


</layout>